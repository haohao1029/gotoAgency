<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('../partials/head'); %>
</head>

<body class="">

   <div id="loading">
      <div id="loading-center">
      </div>
   </div>
   <main>
      <div class="wrapper"
         style="background: url(/images/background.png); background-attachment: fixed; background-size: cover;">
         <section class="login-content">
            <div class="container">
               <div class="row align-items-center justify-content-center height-self-center">
                  <div class="col-lg-8">
                     <div class="card auth-card">
                        <div class="card-body p-0">
                           <div class="d-flex align-items-center auth-content">
                              <div class="col-lg-6  content-left">
                                 <div class="p-3">
                                    <h2 class="mb-2 ">Sign In</h2>
                                    <form>
                                       <div class="row">
                                          <div class="col-lg-12">
                                             <div class="floating-label form-group">
                                                <input class="floating-input form-control" type="username"
                                                   placeholder=" ">
                                                <label>Username</label>
                                             </div>
                                          </div>
                                          <div class="col-lg-12">
                                             <div class="floating-label form-group">
                                                <input class="floating-input form-control" type="password"
                                                   placeholder=" ">
                                                <label>Password</label>
                                             </div>
                                          </div>
                                          <div class="col-lg-6">
                                             <div class="custom-control custom-checkbox mb-3">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label control-label-1 "
                                                   for="customCheck1">Remember Me</label>
                                             </div>
                                          </div>
                                          <div class="col-lg-6">
                                             <a href="auth-recoverpw.html" class=" float-right">Forgot Password?</a>
                                          </div>
                                       </div>
                                       <button type="button" class="btn btn-primary" onclick="login()">Sign In</button>
                                       <p class="mt-3">
                                          Create an Account <a href="/register" class=" text-underline">Sign Up</a>
                                       </p>
                                    </form>
                                 </div>
                              </div>
                              <div class="col-lg-6 content-right">
                                 <img src="/images/login/01.png" class="img-fluid image-right" alt="">
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </section>
      </div>
   </main>
   <footer>
      <%- include('../partials/footer'); %>
         <script>
            const login = () => {
               $.ajax({
                  url: `${backendUrl}/auth/token`,
                  type: 'POST',
                  data: {
                     username: $('input[name=name]').val(),
                     password: $('input[name=password]').val(),
                  },
               }).done(res => {
                  localStorage.setItem("local", res.token);
               }).fail(res => {
                  console.log(res);
               });
               window.location.href = "/";
            }
         </script>
   </footer>

</body>

</html>