<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="">

    <div id="loading">
        <div id="loading-center">
        </div>
    </div>
    <main>
        <div class="wrapper"
            style="background: url(/images/background.png); background-attachment: fixed; background-size: cover;">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-6  content-left">
                                            <div class="p-3">
                                                <h2 class="mb-2 ">Sign Up</h2>
                                                <p>Create your Glare account.</p>
                                                <form>
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <div class="floating-label form-group">
                                                                <input class="floating-input form-control" name="name"
                                                                    type="text" placeholder=" ">
                                                                <label>Full Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="floating-label form-group">
                                                                <input class="floating-input form-control" name="email"
                                                                    type="email" placeholder=" ">
                                                                <label>Email</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="floating-label form-group">
                                                                <input class="floating-input form-control"
                                                                    name="password" type="password" placeholder=" ">
                                                                <label>Password</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <div class="floating-label form-group">
                                                                <input class="floating-input form-control"
                                                                    name="password_confirmation" type="password"
                                                                    placeholder=" ">
                                                                <label>Confirm Password</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="custom-control custom-checkbox mb-3">
                                                                <input type="checkbox" class="custom-control-input"
                                                                    id="customCheck1">
                                                                <label class="custom-control-label "
                                                                    for="customCheck1">I agree with the
                                                                    terms of use</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button type="button" class="btn btn-primary"
                                                        onclick="register()">Sign Up</button>
                                                    <p class="mt-3">
                                                        Already have an Account <a href="/register"
                                                            class=" text-underline">Sign
                                                            In</a>
                                                    </p>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 content-right">
                                            <img src="/images/login/01.png" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
        <script>
            function register() {
                $.ajax({
                    url: `${backendUrl}/api/register`,
                    type: 'POST',
                    data: {
                        name: $('input[name=name]').val(),
                        email: $('input[name=email]').val(),
                        password: $('input[name=password]').val(),
                        password_confirmation: $('input[name=password_confirmation]').val(),
                    },
                })
                window.location.href = "/";
            }
        </script>
    </footer>

</body>

</html>